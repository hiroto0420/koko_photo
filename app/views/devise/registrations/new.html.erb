<div class="flex w-full min-h-screen">
  <div class="w-1/2 flex items-center justify-center bg-red-100">
    <h1 class="text-center text-6xl">ここフォト</h1>
  </div>
  <div class="w-1/2 flex justify-center">
    <div class="w-full max-w-md px-12">
      <h2 class="mt-24 mb-6 text-xl font-semibold px-14">新規登録</h2>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field mb-2">
          <%= f.label :name %><br />
          <%= f.text_field :name, class: "form" %>
        </div>

        <div class="field mb-2">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form" %>
        </div>

        <div class="field mb-2">
          <%= f.label :password %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %>文字以上)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password", class: "form" %>
        </div>

        <div class="field mb-2">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form" %>
        </div>

        <div class="actions btn">
          <%= f.submit "登録" %>
        </div>
      <% end %>

      <div class="mt-3 text-left">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
